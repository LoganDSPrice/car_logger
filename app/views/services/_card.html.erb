<div class="card mb-3">
  <h2 class="card-header h4">
    Service #<%= service.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Cost</dt>
      <dd><%= service.cost %></dd>

      <dt>Description</dt>
      <dd><%= service.description %></dd>

      <dt>Notes</dt>
      <dd><%= service.notes %></dd>

      <dt>Part</dt>
      <dd><%= service.part %></dd>

      <dt>Shop visit</dt>
      <dd><%= service.shop_visit %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back service, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_service_url(service), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to service, method: :delete, data: { confirm: "Do you really want to delete this service?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(service.updated_at) %> ago
  </div>
</div>
