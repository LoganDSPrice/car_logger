      <% service.errors.full_messages_for(:part).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% shop_visit_class = "form-control" %>
    <% shop_visit_was_invalid = service.errors.include?(:shop_visit) %>

    <% if was_validated %>
      <% if shop_visit_was_invalid %>
        <% shop_visit_class << " is-invalid" %>
      <% else %>
        <% shop_visit_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :shop_visit %>

    <%= f.text_field :shop_visit, class: shop_visit_class, placeholder: "Enter shop visit" %>
    <% if shop_visit_was_invalid %>
      <% service.errors.full_messages_for(:shop_visit).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
