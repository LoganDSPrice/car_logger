<% was_validated = service.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(service, html: form_html_options) do |f| %>
  <div class="form-group">
    <% cost_class = "form-control" %>
    <% cost_was_invalid = service.errors.include?(:cost) %>

    <% if was_validated %>
      <% if cost_was_invalid %>
        <% cost_class << " is-invalid" %>
      <% else %>
        <% cost_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cost %>

    <%= f.text_field :cost, class: cost_class, placeholder: "Enter cost" %>
    <% if cost_was_invalid %>
      <% service.errors.full_messages_for(:cost).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = service.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>

    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% service.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% notes_class = "form-control" %>
    <% notes_was_invalid = service.errors.include?(:notes) %>

    <% if was_validated %>
      <% if notes_was_invalid %>
        <% notes_class << " is-invalid" %>
      <% else %>
        <% notes_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :notes %>

    <%= f.text_area :notes, class: notes_class, placeholder: "Enter notes" %>
    <% if notes_was_invalid %>
      <% service.errors.full_messages_for(:notes).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% part_class = "form-control" %>
