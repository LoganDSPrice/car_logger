<% was_validated = document.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(document, html: form_html_options) do |f| %>
  <div class="form-group">
    <% shop_visit_class = "form-control" %>
    <% shop_visit_was_invalid = document.errors.include?(:shop_visit) %>

    <% if was_validated %>
      <% if shop_visit_was_invalid %>
        <% shop_visit_class << " is-invalid" %>
      <% else %>
        <% shop_visit_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :shop_visit %>

    <%= f.text_field :shop_visit, class: shop_visit_class, placeholder: "Enter shop visit" %>
    <% if shop_visit_was_invalid %>
      <% document.errors.full_messages_for(:shop_visit).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = document.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>

    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <% if image_was_invalid %>
      <% document.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
