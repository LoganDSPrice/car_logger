<tr>
  <td>
    <%= document.shop_visit %>
  </td>

  <td>
    <%= document.image %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to document, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_document_url(document), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to document, method: :delete, data: { confirm: "Do you really want to delete this document?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
