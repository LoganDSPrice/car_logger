<tr>
  <td>
    <%= part.name %>
  </td>

  <td>
    <%= part.car %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to part, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_part_url(part), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to part, method: :delete, data: { confirm: "Do you really want to delete this part?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
