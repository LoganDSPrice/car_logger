<div class="card mb-3">
  <h2 class="card-header h4">
    Part #<%= part.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= part.name %></dd>

      <dt>Car</dt>
      <dd><%= part.car %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back part, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_part_url(part), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to part, method: :delete, data: { confirm: "Do you really want to delete this part?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(part.updated_at) %> ago
  </div>
</div>
