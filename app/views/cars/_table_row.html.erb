<tr>
  <td>
    <%= car.name %>
  </td>

  <td>
    <%= car.make %>
  </td>

  <td>
    <%= car.model %>
  </td>

  <td>
    <%= car.year %>
  </td>

  <td>
    <%= car.user %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to car, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_car_url(car), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to car, method: :delete, data: { confirm: "Do you really want to delete this car?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fad fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
