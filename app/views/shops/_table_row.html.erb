<tr>
  <td>
    <%= shop.name %>
  </td>

  <td>
    <%= shop.street_address %>
  </td>

  <td>
    <%= shop.city %>
  </td>

  <td>
    <%= shop.state %>
  </td>

  <td>
    <%= shop.zip_code %>
  </td>

  <td>
    <%= shop.phone_number %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to shop, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_shop_url(shop), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to shop, method: :delete, data: { confirm: "Do you really want to delete this shop?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
