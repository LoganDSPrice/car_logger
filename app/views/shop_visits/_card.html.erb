<div class="card mb-3">
  <h2 class="card-header h4">
    Shop Visit #<%= shop_visit.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Date</dt>
      <dd><%= shop_visit.date %></dd>

      <dt>Starts on</dt>
      <dd><%= shop_visit.starts_on %></dd>

      <dt>Ends on</dt>
      <dd><%= shop_visit.ends_on %></dd>

      <dt>Miles</dt>
      <dd><%= shop_visit.miles %></dd>

      <dt>Car</dt>
      <dd><%= shop_visit.car %></dd>

      <dt>Shop</dt>
      <dd><%= shop_visit.shop %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back shop_visit, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_shop_visit_url(shop_visit), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to shop_visit, method: :delete, data: { confirm: "Do you really want to delete this shop_visit?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(shop_visit.updated_at) %> ago
  </div>
</div>
